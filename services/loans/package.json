{
  "name": "loans",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "scripts": {
    "build": "pnpm build:ts & pnpm build:graph",
    "build:ts": "tsc",
    "build:graph": "cd subgraph && pnpm codegen:graph && graph build",
    "clean": "pnpm clean:db & pnpm clean:contracts & pnpm clean:outDir & pnpm clean:subgraph",
    "clean:db": "rm -rf mongo/data & rm -rf mongo/log",
    "clean:contracts": "rm -rf artifacts && rm -rf cache && rm -rf contracts/forge-cache && rm -rf contracts/out && rm -rf types",
    "clean:outDir": "rm -rf dist",
    "clean:subgraph": "rm -rf subgraph/src/generated & rm -rf subgraph/build & rm -rf subgraph/subgraph.yaml",
    "codegen:graph": "pnpm precodegen:graph && graph codegen \"./subgraph/subgraph.yaml\" --output-dir \"./subgraph/src/generated/types/\"",
    "compile": "pnpm compile:contracts",
    "compile:contracts": "hardhat typechain && hardhat compile",
    "create:graph": "cd subgraph && graph create --node http://host.docker.internal:8020/ bank-microservices-loans",
    "deploy": "pnpm deploy:graph",
    "deploy:contracts": "hardhat run ./contracts/script/hardhat/deploy.ts --network localhost",
    "deploy:graph": "cd subgraph && graph deploy --node http://host.docker.internal:8020/ --version-label 0.0.1 --ipfs http://host.docker.internal:5001 bank-microservices-loans",
    "dev": "NODE_ENV='development' nodemon --exec \"node -r esbuild-register ./api/v1/index.ts\" -e .ts",
    "lint": "pnpm lint:contracts",
    "lint:api": "eslint \"api/**/*.ts*\"",
    "lint:contracts": "solhint --config ./contracts/.solhint.json --ignore-path ./contracts/.solhintignore --max-warnings 0 \"./contracts/src/**/*.sol\"",
    "lint:subgraph": "eslint \"subgraph/**/*.ts*\"",
    "precodegen:graph": "ts-node \"./subgraph/scripts\" generateSubgraph --deployment localhost",
    "populate": "pnpm populate:contracts",
    "populate:contracts": "hardhat setState --network localhost",
    "prepare:graph": "pnpm create:graph && pnpm deploy:graph",
    "remove:graph": "graph remove --node http://host.docker.internal:8020/ bank-microservices-loans",
    "share": "pnpm share:contracts",
    "share:contracts": "hardhat run ./contracts/script/hardhat/share.ts",
    "start": "pnpm share && pnpm prepare:graph && pnpm start:server",
    "start:chain": "hardhat node --hostname 0.0.0.0",
    "start:server": "NODE_ENV='development' node ./dist/api/v1/index.js",
    "test": "pnpm test:contracts",
    "test:contracts": "forge test"
  },
  "dependencies": {
    "bank-utils": "workspace:*",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0",
    "logger": "workspace:*",
    "mongodb": "^5.3.0",
    "server": "workspace:*"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@graphprotocol/graph-cli": "^0.49.0",
    "@graphprotocol/graph-ts": "^0.30.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.3",
    "@openzeppelin/contracts": "^4.8.3",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/yargs": "^17.0.24",
    "esbuild": "^0.17.19",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.40.0",
    "eslint-config-custom": "workspace:*",
    "eslint-config-custom-subgraph": "workspace:*",
    "ethers": "^6.6.2",
    "globby": "^11.0.4",
    "hardhat": "^2.14.1",
    "nodemon": "^2.0.22",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*",
    "typechain": "^8.2.0",
    "typescript": "^5.0.4",
    "yargs": "^17.7.2"
  }
}
